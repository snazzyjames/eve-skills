//-
    Sign in
    ------------------------------
mixin form-signin
    form(method='post', action='/signin', role='signin', novalidate).form-box
            input(type='hidden', name='action', value='signin')
            .form-groups
                .form-group
                    label(for='signin-email').sr-only Email
                    input(type='email', name='email', placeholder='Email', id='signin-email', value=null).form-control.form-control--first
                .form-group
                    label(for='signin-password').sr-only Password
                    input(type='password', name='password', placeholder='Password', id='signin-password', value='').form-control.form-control--last
            button(type='submit').btn.btn-block.btn-primary.btn-submit Sign in

            .row.text-muted
                .col-sm-12
                    a(href='/join') Don't have an account?
                .col-sm-12
                    a(href='/forgot-password') Forgot password?